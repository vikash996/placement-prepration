<div class="container">
  <script>
    const programs = [
      "Advanced Data Structures",
      "Graph Algorithms",
      "Hash Tables",
      "Binary Heaps",
      "AVL Trees",
      "Red-Black Trees",
      "Recursion Advanced",
      "Dynamic Programming Basics",
      "Greedy Algorithms",
      "Divide and Conquer",
      "File Handling Advanced",
      "Database Connectivity",
      "Web Scraping Scripts",
      "Socket Programming",
      "Multi-threading",
      "Network Programming",
      "Project: Library Management System",
      "Project: Student Portal",
      "Project: Mini Chat App",
      "Project: Calculator App"
    ];

    programs.forEach((prog,i)=>{
      document.write(`
        <div class="program-card" onclick="toggleCode('code${i}')">
          <span>${i+1}. ${prog}</span>
          <div class="code" id="code${i}">// Code for "${prog}" goes here</div>
        </div>
      `);
    });

    function toggleCode(id){ const el=document.getElementById(id); el.style.display=el.style.display==="block"?"none":"block";}
  </script>
</div>
