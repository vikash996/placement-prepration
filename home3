  <script>
    // 1st Year Programs (you can change for each year)
    const programs = [
      {
        title: "1Ô∏è‚É£ Print 'Hello World'",
        code: `#include <stdio.h>
int main() {
    printf("Hello, World!");
    return 0;
}`
      },
      {
        title: "2Ô∏è‚É£ Find Sum of Two Numbers",
        code: `#include <stdio.h>
int main() {
    int a, b, sum;
    printf("Enter two numbers: ");
    scanf("%d %d", &a, &b);
    sum = a + b;
    printf("Sum = %d", sum);
    return 0;
}`
      },
      {
        title: "3Ô∏è‚É£ Check Even or Odd",
        code: `#include <stdio.h>
int main() {
    int n;
    printf("Enter a number: ");
    scanf("%d", &n);
    if(n % 2 == 0)
        printf("Even");
    else
        printf("Odd");
    return 0;
}`
      },
      {
        title: "4Ô∏è‚É£ Find Largest Among Three Numbers",
        code: `#include <stdio.h>
int main() {
    int a, b, c;
    printf("Enter three numbers: ");
    scanf("%d %d %d", &a, &b, &c);
    if(a >= b && a >= c)
        printf("%d is largest", a);
    else if(b >= a && b >= c)
        printf("%d is largest", b);
    else
        printf("%d is largest", c);
    return 0;
}`
      },
      {
        title: "5Ô∏è‚É£ Check Leap Year",
        code: `#include <stdio.h>
int main() {
    int year;
    printf("Enter a year: ");
    scanf("%d", &year);
    if((year % 4 == 0 && year % 100 != 0) || (year % 400 == 0))
        printf("%d is a leap year", year);
    else
        printf("%d is not a leap year", year);
    return 0;
}`
      },
      {
        title: "6Ô∏è‚É£ Find Factorial of a Number",
        code: `#include <stdio.h>
int main() {
    int n, i, fact = 1;
    printf("Enter a number: ");
    scanf("%d", &n);
    for(i = 1; i <= n; i++)
        fact *= i;
    printf("Factorial = %d", fact);
    return 0;
}`
      },
      {
        title: "7Ô∏è‚É£ Generate Fibonacci Series",
        code: `#include <stdio.h>
int main() {
    int n, t1 = 0, t2 = 1, next;
    printf("Enter number of terms: ");
    scanf("%d", &n);
    for(int i = 1; i <= n; ++i) {
        printf("%d ", t1);
        next = t1 + t2;
        t1 = t2;
        t2 = next;
    }
    return 0;
}`
      },
      {
        title: "8Ô∏è‚É£ Reverse a Number",
        code: `#include <stdio.h>
int main() {
    int n, reversed = 0;
    printf("Enter a number: ");
    scanf("%d", &n);
    while(n != 0) {
        reversed = reversed * 10 + n % 10;
        n /= 10;
    }
    printf("Reversed = %d", reversed);
    return 0;
}`
      },
      {
        title: "9Ô∏è‚É£ Check Palindrome Number",
        code: `#include <stdio.h>
int main() {
    int n, temp, reversed = 0;
    printf("Enter a number: ");
    scanf("%d", &n);
    temp = n;
    while(temp != 0) {
        reversed = reversed * 10 + temp % 10;
        temp /= 10;
    }
    if(n == reversed)
        printf("Palindrome");
    else
        printf("Not Palindrome");
    return 0;
}`
      },
      {
        title: "üîü Find Sum of Digits",
        code: `#include <stdio.h>
int main() {
    int n, sum = 0;
    printf("Enter a number: ");
    scanf("%d", &n);
    while(n != 0) {
        sum += n % 10;
        n /= 10;
    }
    printf("Sum of digits = %d", sum);
    return 0;
}`
      }
    ];

    // Render programs
    const list = document.getElementById("programList");
    programs.forEach((prog) => {
      const card = document.createElement("div");
      card.className = "program-card";
      card.innerHTML = `
        <div class="program-title">${prog.title}</div>
        <div class="program-code">${prog.code}</div>
      `;
      card.onclick = () => card.classList.toggle("open");
      list.appendChild(card);
    });
  </script>
