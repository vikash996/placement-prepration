<h1>2nd Year Programming Exercises</h1>
<div class="container">
  <script>
    const programs = [
      "Object Oriented Programming",
      "Classes and Objects",
      "Constructor and Destructor",
      "Static Members",
      "Inheritance Basics",
      "Polymorphism",
      "Operator Overloading",
      "Exception Handling",
      "File I/O Basics",
      "Templates",
      "Linked List Implementation",
      "Stack Implementation",
      "Queue Implementation",
      "Doubly Linked List",
      "Binary Search Tree",
      "Recursion Practice",
      "Sorting Algorithms",
      "Searching Algorithms",
      "Dynamic Memory Allocation",
      "Simple Project: Banking System"
    ];

    programs.forEach((prog,i)=>{
      document.write(`
        <div class="program-card" onclick="toggleCode('code${i}')">
          <span>${i+1}. ${prog}</span>
          <div class="code" id="code${i}">// Code for "${prog}" goes here</div>
        </div>
      `);
    });

    function toggleCode(id){ const el=document.getElementById(id); el.style.display=el.style.display==="block"?"none":"block";}
  </script>
</div>
